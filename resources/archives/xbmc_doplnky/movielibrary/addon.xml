<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.movielibrary.cz"
       name="movie-library.cz"
       version="1.2.4.1"
       provider-name="Libor Zoubek"
       repository="xbmc_doplnky">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
    <import addon="script.module.stream.resolver" version="1.2.1"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
             provides="video"
             library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">movie-library.cz</summary>
    <summary lang="cs">movie-library.cz</summary>
    <description lang="en">Watch online content from movie-library.cz</description>
    <description lang="cs">Sledujte online obsah ze servru movie-library.cz Plugin podporuje přehrávání a stahování videí ze servru uloz.to bez nutnosti video stahovat nebo pokaždé opisovat kontrolní kód!!. Dále je možné vyhledávat videa jak na movie-library.cz tak přímo na ulozto.cz a taky stahovat videa na disk.</description>
    <platform>all</platform>
  </extension>
</addon>
