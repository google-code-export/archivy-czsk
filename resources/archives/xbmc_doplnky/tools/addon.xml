    		<file>trivialresolver.py</file>
    		<file>videobbresolver.py</file>
    		<file>videoweedresolver.py</file>
    		<file>videozerresolver.py</file>
    		<file>vkontakteresolver.py</file>
    		<file>youtuberesolver.py</file>
    		<file>zideonlresolver.py</file>
    		<file>stagevuresolver.py</file>
    		<file>zkouknitoresolver.py</file>
